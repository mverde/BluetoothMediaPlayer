<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    style="?android:attr/buttonBarStyle" >

   <!-- <ImageView android:layout_height="match_parent"
               android:layout_width="match_parent"
               android:scaleType="fitXY"
               android:src="@drawable/ttback"/> -->

   <Button android:text="@string/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="play"
        android:drawable="@drawable/play_blue"
        style="?android:attr/buttonBarButtonStyle"/>
    <Button android:text="@string/pause_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="pause"
        android:drawable="@drawable/pause"
        style="?android:attr/buttonBarButtonStyle"/>
    <Button android:text="@string/skip_fwd_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="skipNext"
        android:drawable="@drawable/next"
        style="?android:attr/buttonBarButtonStyle"/>
    <Button android:text="@string/skip_bwd_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="skipPrev"
        android:drawable="@drawable/previous"
        style="?android:attr/buttonBarButtonStyle"/>

</LinearLayout>
